<?xml version="1.0"?>
<!--
/**
 * ACL Configuration for B2B Module
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Zeltero_B2B::b2b" title="B2B" sortOrder="100">
                    <resource id="Zeltero_B2B::company" title="Companies" sortOrder="10"/>
                    <resource id="Zeltero_B2B::quick_order" title="Quick Orders" sortOrder="20"/>
                    <resource id="Zeltero_B2B::rfq" title="Requests for Quote" sortOrder="30"/>
                    <resource id="Zeltero_B2B::config" title="Configuration" sortOrder="40"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Zeltero_B2B::config" title="Zeltero B2B"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
