# Environment variables for B2B Engine Docker setup
# Copy this file to .env and customize the values

# Magento Run Mode (developer, production, default)
MAGENTO_RUN_MODE=production

# MySQL Configuration
MYSQL_ROOT_PASSWORD=changeme_root_password_here
MYSQL_DATABASE=magento_b2b
MYSQL_USER=magento
MYSQL_PASSWORD=changeme_secure_password_here

# Magento Admin Configuration (used during initial setup)
MAGENTO_ADMIN_FIRSTNAME=Admin
MAGENTO_ADMIN_LASTNAME=User
MAGENTO_ADMIN_EMAIL=admin@example.com
MAGENTO_ADMIN_USER=admin
MAGENTO_ADMIN_PASSWORD=Admin123!

# Magento Base URL (change to your domain)
MAGENTO_BASE_URL=http://localhost

# HTTP Basic Auth for Production (username:password)
# Generate password with: htpasswd -nb username password
# Or use online generator: https://hostingcanada.org/htpasswd-generator/
HTTP_AUTH_USER=b2badmin
HTTP_AUTH_PASSWORD=changeme_auth_password

# Redis Configuration
REDIS_SESSION_DB=0
REDIS_CACHE_DB=1

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# SSL/TLS Configuration (for production with Let's Encrypt)
# ENABLE_SSL=true
# SSL_CERTIFICATE_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
# SSL_CERTIFICATE_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem
